<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/shape_dialog_center_bg"
        android:orientation="vertical"
        android:paddingStart="4dp"
        android:paddingTop="1dp"
        android:paddingEnd="4dp"
        android:paddingBottom="1dp">

        <TextView
            android:id="@+id/tv_title_navigateTypeDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="14dp"
            android:text="选择导航模式"
            android:textColor="@color/text_3"
            android:textSize="@dimen/text_size_12"
            android:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_bg" />

        <TextView
            android:id="@+id/tv_drive_navigateTypeDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_square_white_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="驾车"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/text_size_18" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_bg" />

        <TextView
            android:id="@+id/tv_ride_navigateTypeDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_square_white_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="骑行"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/text_size_18" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_bg" />

        <TextView
            android:id="@+id/tv_walk_navigateTypeDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_square_white_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="步行"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/text_size_18" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_cancel_navigateTypeDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_dialog_center_bg"
        android:gravity="center"
        android:padding="10dp"
        android:text="取消"
        android:textColor="@color/theme_color"
        android:textSize="@dimen/text_size_18" />
</LinearLayout>