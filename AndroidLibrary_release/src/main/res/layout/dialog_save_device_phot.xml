<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/device_shape">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/dialog_top_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="@dimen/text_size_10"
                android:text="解绑成功保存设备二维码"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_17" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/text_size_30"
                android:text="设备二维码"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16" />


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:id="@+id/ll_QRphot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_dialog_center_bg"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <com.luhong.locwithlibrary.view.ScaleImageView
                        android:id="@+id/iv_deviceQR_deviceQR"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_margin="20dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/default_friend" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_deviceType_deviceQR"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="120dp"
                                android:text="设备型号："
                                android:textColor="@color/text_3"
                                android:textSize="@dimen/text_size_12" />

                            <TextView
                                android:id="@+id/tv_deviceId_deviceQR"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:minWidth="120dp"
                                android:text="设备ID："
                                android:textSize="@dimen/text_size_8" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="14dp"
                android:background="@mipmap/dialog_arrears_button_bg">

                <TextView
                    android:id="@+id/tv_confirm_deviceRecord"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:padding="12dp"
                    android:text="保存到相册"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_15" />
            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="0.8dp"
        android:layout_height="30dp"
        android:background="@color/white" />

    <ImageView
        android:id="@+id/iv_close_deviceRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/dialog_close" />
</LinearLayout>