<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:background="@drawable/pop_top_bg"
        android:gravity="center_horizontal"
        android:paddingStart="18dp"
        android:paddingTop="18dp"
        android:paddingEnd="18dp"
        android:paddingBottom="12dp">

        <ImageView
            android:id="@+id/iv_standard_mapType"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginEnd="18dp"
            android:src="@mipmap/map_standard_foc" />

        <ImageView
            android:id="@+id/iv_satellite_mapType"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginEnd="18dp"
            android:layout_toEndOf="@+id/iv_standard_mapType"
            android:src="@mipmap/map_satellite_nor" />

        <LinearLayout
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_toEndOf="@+id/iv_satellite_mapType"
            android:gravity="center"
            android:background="#eeeeee"
            android:orientation="horizontal"
            >
        <ImageView
            android:id="@+id/iv_night_mapType"
            android:layout_width="75dp"
            android:layout_height="75dp"

            android:background="@mipmap/map_night_no" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>