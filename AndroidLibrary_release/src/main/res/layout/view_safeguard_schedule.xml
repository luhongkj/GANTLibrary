<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_edit_safeguardSchedule"
            style="@style/safeguard_schedule_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/safeguard_schedule_edit"
            android:text="填写资料" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="25dp"
            android:layout_weight="1"
            android:background="@color/theme_color" />

        <TextView
            android:id="@+id/tv_valuation_safeguardSchedule"
            style="@style/safeguard_schedule_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/selector_safeguard_schedule_valuation"
            android:enabled="false"
            android:text="等待估值" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="25dp"
            android:layout_weight="1"
            android:background="@color/theme_color" />

        <TextView
            android:id="@+id/tv_pay_safeguardSchedule"
            style="@style/safeguard_schedule_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/selector_safeguard_schedule_pay"
            android:enabled="false"
            android:text="支付保费" />
    </LinearLayout>

</LinearLayout>