<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:background="@drawable/shape_dialog_center_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_message_promptDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingStart="6dp"
        android:paddingTop="30dp"
        android:paddingEnd="6dp"
        android:paddingBottom="30dp"
        android:text="该账号已注册"
        android:textColor="@color/text_3"
        android:textSize="@dimen/text_size_15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/line_bg" />

    <LinearLayout
        android:id="@+id/ll_bottom_promptDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel_promptDialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="16dp"
            android:text="取消"
            android:textColor="@color/green_text" />

        <View
            android:id="@+id/v_line_promptDialog"
            android:layout_width="0.6dp"
            android:layout_height="match_parent"
            android:background="@color/line_bg" />

        <TextView
            android:id="@+id/tv_confirm_promptDialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="16dp"
            android:text="确定"
            android:textColor="@color/green_text" />
    </LinearLayout>
</LinearLayout>