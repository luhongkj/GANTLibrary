<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/activity_title" />

    <com.luhong.locwithlibrary.view.NoScrollViewPager
        android:id="@+id/viewPager_safeguard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </com.luhong.locwithlibrary.view.NoScrollViewPager>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/line_bg" />

    <RadioGroup
        android:id="@+id/radioGroup_safeguard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_home_safeguard"
            style="@style/main_rb_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:checked="true"
            android:drawableTop="@drawable/selector_safeguard_home"
            android:paddingTop="6dp"
            android:text="首页"
            android:textSize="@dimen/text_size_14" />

        <View
            android:layout_width="0.6dp"
            android:layout_height="44dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:background="@color/line_bg" />

        <RadioButton
            android:id="@+id/rb_mine_safeguard"
            style="@style/main_rb_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_safeguard_mine"
            android:paddingTop="6dp"
            android:text="我的"
            android:textSize="@dimen/text_size_14" />
    </RadioGroup>

</LinearLayout>