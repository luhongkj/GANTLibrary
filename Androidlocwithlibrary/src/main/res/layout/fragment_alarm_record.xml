<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_content_alarmRecord_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_frequency_alarmRecord_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="累计告警:0次"
            android:textColor="@color/text_3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/tv_date_alarmRecord_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="告警时间"
                android:textColor="@color/text_3" />

            <TextView
                android:id="@+id/tv_phoneNo_alarmRecord_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="接听手机号"
                android:textColor="@color/text_3" />
            <!--接收短信手机号-->
        </RelativeLayout>
    </LinearLayout>

    <include layout="@layout/fragment_recycler" />
</LinearLayout>