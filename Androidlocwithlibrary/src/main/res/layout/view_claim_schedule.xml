<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_edit_claimSchedule"
            style="@style/safeguard_schedule_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/safeguard_schedule_edit"
            android:text="报失" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="25dp"
            android:layout_weight="1"
            android:background="@color/theme_color" />

        <TextView
            android:id="@+id/tv_forensics_claimSchedule"
            style="@style/safeguard_schedule_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/selector_claim_schedule_forensics"
            android:enabled="false"
            android:text="取证" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="25dp"
            android:layout_weight="1"
            android:background="@color/theme_color" />

        <TextView
            android:id="@+id/tv_verify_claimSchedule"
            style="@style/safeguard_schedule_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/selector_claim_schedule_verify"
            android:enabled="false"
            android:text="审核" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="25dp"
            android:layout_weight="1"
            android:background="@color/theme_color" />

        <TextView
            android:id="@+id/tv_reparation_claimSchedule"
            style="@style/safeguard_schedule_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/selector_claim_schedule_reparation"
            android:enabled="false"
            android:text="理赔" />
    </LinearLayout>

</LinearLayout>