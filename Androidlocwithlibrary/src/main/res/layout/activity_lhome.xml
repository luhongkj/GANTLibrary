<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/activity_title" />

    <RelativeLayout
        android:id="@+id/ll_content_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
       >

        <com.amap.api.maps.MapView
            android:id="@+id/mapView_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           />

        <TextView
            android:id="@+id/tv_weather_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/shape_corner_white_bg"
            android:drawableStart="@mipmap/weather_partly_cloudy"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="多云      23℃"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_12" />

        <LinearLayout
            android:id="@+id/ll_titls"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape_corner_white_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_myLocation_home"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:padding="10dp"
                android:src="@mipmap/home_phone_position_pre" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/line_bg" />

            <ImageView
                android:id="@+id/iv_deviceLocation_home"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:padding="10dp"
                android:src="@mipmap/home_vehicle_position_pre" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/line_bg" />

            <ImageView
                android:id="@+id/iv_message_home"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:padding="10dp"
                android:src="@mipmap/icon_home_track" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/line_bg" />

            <ImageView
                android:id="@+id/iv_setting_home"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:padding="10dp"
                android:src="@mipmap/home_setting" />
        </LinearLayout>


        <ImageView
            android:id="@+id/iv_follow_home"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_titls"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:src="@mipmap/home_follow" />

        <RelativeLayout
            android:id="@+id/ll_bottom_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp">


            <RelativeLayout
                android:id="@+id/rl_addVehicle_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@mipmap/home_add_bg">

                <TextView
                    android:id="@+id/tv_addVehicle_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableTop="@mipmap/home_add"
                    android:gravity="center_horizontal"
                    android:text="添加车辆"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_16" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>