<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@mipmap/dialog_arrears_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title_devicePrompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:text="温馨提示"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_24" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_contentBg_devicePrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="-80dp"
            android:layout_marginEnd="10dp"
            android:background="@mipmap/end_riding_bg"
            android:gravity="center_horizontal"
            android:minWidth="250dp"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/tv_content_devicePrompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="30dp"
                android:paddingTop="110dp"
                android:paddingEnd="30dp"
                android:textColor="#333"
                android:paddingBottom="50dp"
                android:textSize="@dimen/text_size_13" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/device_manager_shape">

            <TextView
                android:id="@+id/tv_confirm_devicePrompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="12dp"
                android:text="确认补缴"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_15" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/device_manager_clo_shape">

            <TextView
                android:id="@+id/tv_clo_devicePrompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="12dp"
                android:text="取消"
                android:textColor="@color/colorPrimary2"
                android:textSize="@dimen/text_size_15" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/view_lin"
        android:layout_width="0.8dp"
        android:layout_height="30dp"
        android:background="@color/white" />

    <ImageView
        android:id="@+id/iv_close_deviceRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/dialog_close" />

</LinearLayout>