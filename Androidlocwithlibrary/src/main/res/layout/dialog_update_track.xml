<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/shape_dialog_center_bg"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingTop="14dp"
        android:paddingEnd="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="修改轨迹名称"
            android:textColor="@color/text_3"
            android:textSize="@dimen/text_size_18" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="@color/line_bg" />

        <com.luhong.locwithlibrary.view.ClearEditText
            android:id="@+id/et_trackName_updateTrackDialog"
            style="@style/base_input_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_corner_white_bg"
            android:hint="请输入轨迹名称"
            android:maxLength="10"
            android:paddingStart="10dp"
            android:singleLine="true"
            android:paddingEnd="10dp"
            android:text="我的轨迹0130"
            android:textColor="@color/text_3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="长度为1-10个字符"
            android:textColor="@color/text_9"
            android:textSize="@dimen/text_size_10" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="@color/line_bg" />

        <TextView
            android:id="@+id/tv_confirm_updateTrackDialog"
            style="@style/button_theme_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:text="立即保存" />
    </LinearLayout>

    <View
        android:layout_width="0.8dp"
        android:layout_height="30dp"
        android:background="@color/white" />

    <ImageView
        android:id="@+id/iv_close_updateTrackDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/dialog_close" />
</LinearLayout>