    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical">

    <include layout="@layout/activity_title" />

    <RelativeLayout
        android:id="@+id/ll_perfect_safeguardDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingStart="28dp"
        android:paddingTop="21dp"
        android:paddingEnd="28dp"
        android:paddingBottom="21dp">

        <TextView
            android:id="@+id/tv_safeguardName_safeguardDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:text="丢车保障服务"
            android:textColor="@color/text_3"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/tv_safeguardNo_safeguardDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_safeguardName_safeguardDetail"
            android:text="保单号：20181030132445001"
            android:textColor="@color/text_6"
            android:textSize="@dimen/text_size_11" />

        <ImageView
            android:id="@+id/iv_safeguardStatus_safeguardDetail"
            android:layout_width="61dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/safeguard_claim_ongoing" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
