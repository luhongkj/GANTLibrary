                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.4dp"
                    android:background="@color/line_bg" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="购保费用："
                        android:textColor="@color/text_6"
                        android:textSize="@dimen/text_size_13" />

                    <TextView
                        android:id="@+id/tv_insuranceFee_safeguardDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="¥123"
                        android:textColor="@color/text_3"
                        android:textSize="@dimen/text_size_13" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.4dp"
                    android:background="@color/line_bg" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="保障期限："
                        android:textColor="@color/text_6"
                        android:textSize="@dimen/text_size_13" />

                    <TextView
                        android:id="@+id/tv_expiryDate_safeguardDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="2018/11/01-2019/11"
                        android:textColor="@color/text_3"
                        android:textSize="@dimen/text_size_13" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.4dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/line_bg" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="更多内容请查看"
                    android:textColor="@color/text_6"
                    android:textSize="@dimen/text_size_9" />

                <TextView
                    android:id="@+id/tv_protocol_safeguardDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:paddingTop="18dp"
                    android:paddingBottom="18dp"
                    android:text="《丢车保障服务协议》"
                    android:textColor="@color/theme_color"
                    android:textSize="@dimen/text_size_9" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_confirm_safeguardDetail"
        style="@style/button_theme_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:background="@drawable/selector_button_square_theme_bg"
        android:text="申请理赔" />
</LinearLayout>