                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:gravity="end"
                        android:text="10313243434343433"
                        android:textColor="@color/text_3"
                        android:textSize="@dimen/text_size_13" />
                </RelativeLayout>

