<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/v_line_feedback_record_item"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_dialog_center_bg"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_type_feedback_record_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="售后服务"
                android:textColor="@color/text_3"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/tv_status_feedback_record_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:drawableEnd="@mipmap/arrow_down"
                android:drawablePadding="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="未回复"
                android:textColor="@color/text_9"
                android:textSize="@dimen/text_size_12" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_content_feedback_record_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:background="@color/line_bg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:text="问题描述："
                android:textColor="@color/text_9"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/tv_question_feedback_record_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请问智芯的保修年限是多少年？"
                android:textColor="@color/text_6"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_questionTime_feedback_record_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"
                android:text="2019-01-29 13:11:21"
                android:textColor="@color/text_9"
                android:textSize="@dimen/text_size_11" />

            <LinearLayout
                android:id="@+id/ll_answer_feedback_record_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="客服回复："
                    android:textColor="@color/text_9"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/tv_answer_feedback_record_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请问智芯的保修年限是多少年？"
                    android:textColor="@color/text_6"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/tv_answerTime_feedback_record_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="12dp"
                    android:text="2019-01-29 13:11:21"
                    android:textColor="@color/text_9"
                    android:textSize="@dimen/text_size_11" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>