<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/activity_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <View
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:background="@drawable/shape_black_point" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="设置后仅在紧急情况下，鹿卫士会主动通知紧急联系人"
            android:textColor="#666666"
            android:textSize="@dimen/text_size_11" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <View
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:background="@drawable/shape_black_point" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="目前仅支持号码归属地为中国大陆的手机号码"
            android:textColor="#666666"
            android:textSize="@dimen/text_size_11" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <View
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:background="@drawable/shape_black_point" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="请添加至少2个紧急联系人，避免客观因素通知失败"
            android:textColor="#666666"
            android:textSize="@dimen/text_size_11" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <View
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:background="@drawable/shape_black_point" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="添加或修改紧急联系人后请及时告知对方"
            android:textColor="#666666"
            android:textSize="@dimen/text_size_11" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/shape_dialog_center_bg"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:background="@null"
            android:drawableStart="@mipmap/icon_add_contact_phone"
            android:drawablePadding="19dp"
            android:hint="请输入紧急联系人电话"
            android:inputType="phone"
            android:maxLength="11"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#666666"
            android:textColorHint="#999999"
            android:textSize="@dimen/text_size_15" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="#F4F4F4" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:background="@null"
            android:drawableStart="@mipmap/icon_add_contact_name"
            android:drawablePadding="19dp"
            android:hint="请输入紧急联系人姓名（选填）"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#666666"
            android:textColorHint="#999999"
            android:textSize="@dimen/text_size_15" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        style="@style/button_theme_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="62dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="62dp"
        android:text="保存" />

</LinearLayout>