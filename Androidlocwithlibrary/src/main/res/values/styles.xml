<resources>
    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary2</item>
        <item name="colorPrimaryDark">@color/colorPrimary2</item>
        <item name="colorAccent">@color/colorPrimary2</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowSoftInputMode">adjustNothing|stateHidden</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowAnimationStyle">@style/LeftOutRightInAnimation</item>
    </style>

    <style name="xTabLayout_style">
        <item name="xTabSelectedTextSize">@dimen/text_size_18</item>
        <item name="xTabTextSize">@dimen/text_size_14</item>
        <item name="xTabTextColor">@color/text_3</item>
        <item name="xTabIndicatorColor">@color/theme_color</item>
        <item name="xTabIndicatorHeight">3dp</item>
        <item name="xTabIndicatorWidth">24dp</item>
        <item name="xTabSelectedTextColor">@color/theme_color</item>
        <item name="xTabMode">scrollable</item>
    </style>

    <style name="LeftOutRightInAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/on_activity_open</item>
        <item name="android:activityOpenExitAnimation">@anim/on_activity_puse</item>
        <item name="android:activityCloseEnterAnimation">@anim/on_activity_reopen</item>
        <item name="android:activityCloseExitAnimation">@anim/on_activity_close</item>

        <item name="android:taskOpenEnterAnimation">@anim/on_activity_open</item>
        <item name="android:taskOpenExitAnimation">@anim/on_activity_puse</item>
        <item name="android:taskCloseEnterAnimation">@anim/on_activity_reopen</item>
        <item name="android:taskCloseExitAnimation">@anim/on_activity_close</item>

        <item name="android:taskToFrontEnterAnimation">@anim/on_activity_open</item>
        <item name="android:taskToFrontExitAnimation">@anim/on_activity_close</item>
        <item name="android:taskToBackEnterAnimation">@anim/on_activity_open</item>
        <item name="android:taskToBackExitAnimation">@anim/on_activity_close</item>
    </style>

    <!-- AlertDialog底部弹框动画 -->
    <style name="DialogBottomAnimStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_exit</item>
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowSoftInputMode">stateVisible|adjustPan</item>
    </style>

    <!-- AlertDialog向下伸展弹框动画 -->
    <style name="DialogTopAnimStyle" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_top_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_top_exit</item>
    </style>

    <!-- 标题栏字体样式 -->
    <style name="title_text_style">
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:padding">10dp</item>
    </style>
    <!-- AlertDialog中间缩放弹框动画 -->
    <style name="DialogScaleAnimStyle" mce_bogus="1" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_scale_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_scale_exit</item>
    </style>

    <style name="base_input_style">
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorHint">@color/gray_text</item>
        <item name="android:textColor">@color/text_3</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="base_input_style2">
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorHint">@color/gray_text</item>
        <item name="android:textColor">@color/text_3</item>
        <item name="android:background">@drawable/shape_dialog_center_bg</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:drawablePadding">10dp</item>
    </style>
    <!--按钮-->
    <style name="button_theme_style">
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@drawable/selector_button_theme_bg</item>
    </style>

    <style name="imageFolderAnimator">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_show</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_dismiss</item>
    </style>

    <style name="SwitchStyle">
        <item name="android:background">@null</item>
        <item name="android:thumb">@drawable/selector_swicth_thumb_bg</item>
        <item name="android:track">@drawable/selector_switch_bg</item>
    </style>

    <!--主界面底部菜单样式-->
    <style name="main_rb_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@drawable/selector_text_theme</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:width">0dp</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">4dp</item>
    </style>

    <style name="safeguard_schedule_style">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/text_3</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:drawablePadding">6dp</item>
    </style>

    <style name="max_text_style_16">
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>
    <style name="minro_text_style_13">
        <item name="android:textSize">@dimen/text_size_13</item>
    </style>


    <style name="safeguard_schedule_photo_style">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawableTop">@mipmap/safeguard_schedule_photo_white</item>
        <item name="android:textSize">@dimen/text_size_10</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:text">点击上传</item>
        <item name="android:padding">40dp</item>
    </style>

    <style name="checkbox_week_style">
        <item name="android:textColor">@drawable/selector_text_enable_white</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_corner_feedback_bg</item>
        <item name="android:button">@null</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Base.Theme.Light.Dialog" parent="Base.V7.Theme.AppCompat.Light.Dialog" />

    <style name="device_manage_style">
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:paddingStart">10dp</item>
    </style>

    <style name="BaseAnimStyle">
        <item name="android:windowEnterAnimation">@anim/base_alpha_enter</item>
        <item name="android:windowExitAnimation">@anim/base_alpha_exit</item>
    </style>

    <style name="MyPopupWindow">
        <item name="android:windowEnterAnimation">@anim/pop_in</item>
        <item name="android:windowExitAnimation">@anim/pop_out</item>
    </style>
</resources>
